@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "UpdateTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Kayıt</h4>
            @* <p class="card-description">
            Basic form layout
            </p>*@
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.TeamId)
                <div class="form-group">
                    <label for="exampleInputUsername1">Personel Ad</label>
                    <input type="text" class="form-control" asp-for="PersonName"  placeholder="Personel Adı">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title"  placeholder="Başlık">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Resim Url</label>
                    <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Resim Url">
                </div>
                <div class="form-group">
                    <label for="exampleInputConfirmPassword1">Facebook Url</label>
                    <input type="text" class="form-control" asp-for="FaceUrl"  placeholder="Facebook Url">
                </div>
                <div class="form-group">
                    <label for="exampleInputConfirmPassword1">Instagram Url</label>
                    <input type="text" class="form-control" asp-for="InstaUrl"  placeholder="Instagram Url">
                </div>
                <div class="form-group">
                    <label for="exampleInputConfirmPassword1">Web Url</label>
                    <input type="text" class="form-control" asp-for="WebUrl"  placeholder="Web Url">
                </div>
                <div class="form-group">
                    <label for="exampleInputConfirmPassword1">Twitter Url</label>
                    <input type="text" class="form-control" asp-for="TwitterUrl"placeholder="Twitter Url">
                </div>
                <button type="submit" class="btn btn-primary me-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>

