@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Takımımız</h4>
            @*<p class="card-description">
                Takımımız <code>.table-bordered</code>*@
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                         <th>Id</th>
                            <th>Personel Adı</th>
                            <th>Başlık</th>
                            <th>Resim Url</th>
                            <th>Facebook Url</th>
                            <th>Instagram Url</th>
                            <th>Web Site Url</th>
                            <th>Twitter Url</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                               <td>@item.TeamId</td>
                               <td>@item.PersonName</td>
                               <td>@item.Title</td>
                               <td>@item.ImageUrl</td>
                               <td>@item.FaceUrl</td>
                               <td>@item.InstaUrl</td>
                               <td>@item.WebUrl</td>
                               <td>@item.TwitterUrl</td>
                               <td><a href="/Team/UpdateTeam/@item.TeamId" class="btn btn-secondary">Güncelle</a></td>
                               <td><a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-danger">Sil</a></td>
                               </tr>
                            }
                            
                          
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

