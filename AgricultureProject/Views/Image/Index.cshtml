@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Resim Panel</h4>
            @*<p class="card-description">
            Takımımız <code>.table-bordered</code>*@
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ImageId</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><a href="/Image/UpdateImage/@item.ImageId" class="btn btn-secondary">Güncelle</a></td>
                                <td><a href="/Image/DeleteImage/@item.ImageId" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>