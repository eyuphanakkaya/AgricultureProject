@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "UpdateImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Kayıt</h4>
            @* <p class="card-description">
            Basic form layout
            </p>*@
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.ImageId)
                <div class="form-group">
                    <label for="exampleInputUsername1">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title" placeholder="Başlık..">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Açıklama</label>
                    <input type="text" class="form-control" asp-for="Description" placeholder="Açıklama..">
                </div>
                <button type="submit" class="btn btn-primary me-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>

